#include <iostream>

using namespace std;



int CargarDatosMarca (Marcas, Marcas[] int cantMarcas){
    int i;
    for(i=0;i<cantMarcas;i++){
        cout<<"INGRESE NOMBRE DE LA MARCA: ";
        cin>> Marcas.Nombre[i];
        cout<<"INGRESE EL CODIGO DE LA MARCA: ";
        cin>> Marcas.Codigo[i];}

}
int CargarDatosProductos (Productos, Productos[] int cantProductos){
    int i;
    for(i=0;i<cantProductos;i++){
      cout<<"INGRESE CODIGO DEL PRODUCTO: ";
     cin>> Productos.Codigo[i];
      cout<<"INGRESE NOMBRE DEL PRODUCTO: ";
     cin>>Productos.Nombre[i];
      cout<<"INGRESE PRECIO DE VENTA: ";
     cin>> Productos.Preventa[i];
      cout<<"INGRESE PRECIO DE COMPRA: ";
     cin>>Productos.Precompra[i];
      cout<<"INGRESE EL STOCK DISPONIBLE: ";
     cin>>Productos.Stock[i];
      cout<<"INGRESE EL CODIGO DE LA MARCA: ";
     cin>>Productos.CodigodeMarca[i];

       }

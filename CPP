int buscarIndice(int codProd[20], int codpro){
    int i;
    for(i=0;i<20;i++){
        if(codProd[i]==codpro) return i;
        }
    return -1;}

int buscarFPIndice(string Codformap[5], string fp){
    int i;
    for(i=0;i<5;i++){
        if(Codformap[i]==fp) return i;
        }
    return -1;}

    //carga de lote producto
int carga_V_productos(int codProd, string nombreProd[20], float preVenta[20], float preCompra[20], int codMarca[20], int stock [20])
   {
    for (i=0;i<20,i++){
        cout<<"Ingrese el codigo del producto: ";
        cin>>codProd[codProd-1];
        while (codProd!=0)
            cout<<"Còdigo invàlido, intentelo nuevamente";
            break

        cout<<"Ingrese el nombre del producto: ";
        cin>>nombreProd[nombreProd-1];
          while (nombreProd!="")
            cout<<"Nombre de producto invàlido, intentelo nuevamente";
            break

        cout<<"Ingrese el precio de venta del producto: ";
        cin>>preVenta[preVenta-1];
            while (preVenta==0)
            cout<<"Precio de venta invàlido, intentelo nuevamente";
            break

        cout<<"Ingrese el precio de compra del producto: ";
        cin>>preCompra[preCompra-1];
              while (preCompra==0)
        cout<<"Precio de compra invàlido, intentelo nuevamente";
            break

        cout<<"Ingrese el còdigo de marca del producto: ";
        cin>>codMarca[codMarca-1];
            while (codMarca==0)
        cout<<"Codigo de Marca Invalido, Intentelo nuevamente";
            break

        cout<<"Ingrese el stock del producto: ";
        cin>>stock[stock-1];
        while (stock==0)
            cout<<"El Stock es incorrecto, Intentelo nuevamente";
            break


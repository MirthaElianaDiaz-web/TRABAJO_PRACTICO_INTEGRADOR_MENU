void Burbuja(int Ventaprodcant[])
{
    for (y=0, y<20, y++)
        {
    for (x=0,x<19,x++){
        if (Ventaprodcant[x]<Ventaprodcant[x+1])
            {
            Aux=Ventaprodcant[x+1];
            Ventaprodcant[x+1]=Ventaprodcant;
            Ventaprodcant[x]=aux;
            aux=vp[x+1];
            vp[x+1]=vp[x];
            vp[x]=aux;
            }           }
        }
}

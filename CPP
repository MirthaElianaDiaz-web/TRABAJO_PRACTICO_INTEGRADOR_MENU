void Cargar_V_deMarca(Codmarca, &Vcodmarca[10], Nombre, &Vnombredemarca[10])
{
    int Codmarca, i, Vcodmarca[10], n;
    string Nombre, Vnombredemarca[10];

    for (i = 0; i < 10; i++) {
        cout<<"INGRESE EL CODIGO DE LA MARCA: "<<endl;
        cin>>Codmarca;
        int n=Codmarca-1;
        Vcodmarca[n]=Codmarca;
         while (VCodmarca[n]!=0)
            cout<<"Còdigo invàlido, intentelo nuevamente";
            break

        cout<<"INGRESE NOMBRE DE LA MARCA: "<<endl;
        cin>>Nombre;
        Vnombredemarca[n]=Nombre;
        while (Vnombredemarca[n]!="")
            cout<<"Còdigo invàlido, intentelo nuevamente";
            break
        }
}

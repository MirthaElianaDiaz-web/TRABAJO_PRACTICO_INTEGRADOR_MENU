int buscarIndice(int codProd[20], int codpro){
    int i;
    for(i=0;i<20;i++){
        if(codProd[i]==codpro) return i;
        }
    return -1;

int buscarFPIndice(string Codformap[5], string fp){
    int i;
    for(i=0;i<5;i++){
        if(Codformap[i]==fp) return i;
        }
    return -1;
